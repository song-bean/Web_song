<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Ex09</title>
<script type="text/javascript">
	var str = "태양처럼 뜨거운, 바람처럼 자유로운 영혼";
	document.write(str + "<br>");
	document.write(str + "<br>");
	document.write(str.length + "<br>");
	
	ch = str.charAt(5);
	document.write("ch : " + ch + "<br>");
	document.write(str.indexOf("뜨거운") + "<br>");
	document.write(str.indexOf("가나다") + "<br>");
	
	document.write(str.slice(1,3) + "<br>"); // (위치번호)1부터 3 앞까지 가져와라
	document.write(str.substring(1,3) + "<br>"); //1부터 3 앞까지 가져와라
	
	document.write(str.slice(1,-3) + "<br>"); 
	//document.write(str.substring(1,-3) + "<br>"); 음수를 넣을 수 없음
	
	document.write(str.substr(10,4) + "<br>"); //10번째부터 4개를 가져와라
	
	
	document.write(str.replace("럼", '가') + "<br>"); //처음만난 럼을 가로 바꿈
	document.write(str.toString() + "<br>"); //일시적으로 바뀜 --> 아예 바꾸고 싶으면 다시 str에 넣어줘야 함
	
	document.write(str.replace(/럼/g, '가') + "<br>"); //모든 럼을 가로 바꿈
	document.write(str.toString() + "<br>");
	
	
	word = "I can do It!";
	document.write(word.Upper() + "<br>");
	document.write(word.Lower() + "<br>");
	
	
	
	
</script>
</head>
<body>

</body>
</html>