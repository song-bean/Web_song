	document.write("<table>");
	document.write("<tr>");
	for(i=2;i<10;i++) {
		document.write("<th>" + i + "단</th>");
	}
	document.write("</tr>");
	
	for(i=1;i<10;i++) {
		document.write("<tr>");
		for(j=2;j<10;j++) {
			document.write("<td>" + j + " X " + i + " = "+ (j*i) + "</td>");		
		}
		document.write("</tr>");
	}
	
	document.write("</table>");
	
</script>
