<script type="text/javascript">
	var age = 30;
	document.write("나이1 : " + age + "<br>");
	
	function test(){
		var age = 40; //var를 쓰면 지역변수 없으면 전역변수 
		document.write("나이2 : " + age + "<br>");
	}
	
	function test2(age){ //여기서 age는 지역변수 
		document.write("나이4 : " + age + "<br>");
	}
	
	test();
	document.write("나이3 : " + age + "<br>");
	
	test2(70);
	document.write("나이5 : " + age + "<br>");
	
</script>
