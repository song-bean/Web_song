<script type="text/javascript">
	var favorite = prompt("어느 계절을 좋아하세요?(1:봄,2:여름,3:가을,4:겨울)")
	
	switch(favorite){
	
	case 1:
		document.write("<h2>봄을 좋아하시는군요</h2>");
		document.write("<img src = '../images/spring/png'");
		break;
	case 2:
		document.write("<h2>여름을 좋아하시는군요</h2>");
		document.write("<img src = '../images/spring/png'");
		break;
	case 3:
		document.write("<h2>가을을 좋아하시는군요</h2>");
		document.write("<img src = '../images/spring/png'");
		break;
	case 4:
		document.write("<h2>봄을 좋아하시는군요</h2>");
		document.write("<img src = '../images/spring/png'");
		break;
	
	}
</script>
